<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View" />
        <variable
            name="viewModel"
            type="com.deltasoft.ihma.viewmodel.PaymentViewModel" />
        <variable
            name="fragment"
            type="com.deltasoft.ihma.view.drawer.PaymentFragment" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/colorPrimary"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/logo_new" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="8dp"
            android:text="IHMA"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:gravity="center"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_top_bg"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Congratulations"
                android:textSize="25dp"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:textColor="@color/black" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Your membership is approved"
                android:textSize="14dp"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorPrimary" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:text="Now pay your membership fee"
                android:textSize="16dp"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:textColor="@color/black" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/annual_id"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:text="Annual"
                    android:textSize="20dp"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:elevation="3dp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:background="@drawable/leftrounded_button_bg"
                    android:gravity="center_horizontal">

                </TextView>
                <TextView
                    android:id="@+id/lifetime_id"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:text="Lifetime"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:elevation="3dp"
                    android:textColor="@color/colorAccent"
                    android:background="@drawable/white_rightrounded_bg"
                    android:gravity="center_horizontal">

                </TextView>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:text="Annual Membership Fee"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/amount_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="400"
                android:textSize="30dp"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/pay_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:padding="5dp"
                android:text="Pay Now"
                android:background="@drawable/payment_button_bg"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textAllCaps="false" />
            <TextView
                android:id="@+id/policy_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:padding="5dp"
                android:text="Refund Policy"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:onClick="@{(v)->fragment.onRefundPolicyClicked(v)}"
                android:textStyle="bold"
                android:textAllCaps="false" />

        </LinearLayout>
    </LinearLayout>
    </ScrollView>

</layout>

