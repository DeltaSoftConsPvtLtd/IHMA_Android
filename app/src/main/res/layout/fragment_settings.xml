<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.ilaftalkful.ihma.viewmodel.SettingsViewModel" />

        <variable
            name="spinnerAdapter"
            type="android.widget.ArrayAdapter" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@color/colorPrimary"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rounded_layout"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:layout_marginTop="150dp" >

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/first_name_tl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp">

                        <EditText
                            android:id="@+id/first_name_ed"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textEmailAddress"
                            android:background="@color/white"
                            android:hint="First Name"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/last_name_tl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp">

                        <EditText
                            android:id="@+id/last_name_ed"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textEmailAddress"
                            android:background="@color/white"
                            android:hint="Last Name"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/register_no_tl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp">

                        <EditText
                            android:id="@+id/register_no_ed"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textEmailAddress"
                            android:background="@color/white"
                            android:hint="Registration Number"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/mobile_tl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp">

                        <EditText
                            android:id="@+id/mobile_ed"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textEmailAddress"
                            android:background="@color/white"
                            android:hint="Mobile"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:background="@drawable/cardview_bg"
                            android:layout_height="60dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="OTP"
                                android:layout_gravity="center"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:layout_marginLeft="30dp"
                                android:textColor="@color/colorPrimary">

                            </TextView>



                            <EditText
                                android:id="@+id/otpET1"
                                android:layout_width="30dp"
                                android:layout_height="50dp"
                                android:inputType="number"
                                android:maxLength="1"
                                android:gravity="center"
                                android:layout_marginStart="20dp"
                                android:textSize="20sp"/>

                            <EditText
                                android:id="@+id/otpET2"
                                android:layout_width="30dp"
                                android:layout_height="50dp"
                                android:inputType="number"
                                android:maxLength="1"
                                android:gravity="center"
                                android:layout_marginStart="20dp"
                                android:textSize="20sp"/>
                            <EditText
                                android:id="@+id/otpET3"
                                android:layout_width="30dp"
                                android:layout_height="50dp"
                                android:inputType="number"
                                android:maxLength="1"
                                android:gravity="center"
                                android:layout_marginStart="20dp"
                                android:textSize="20sp"/>


                            <EditText
                                android:id="@+id/otpET4"
                                android:layout_width="30dp"
                                android:layout_height="50dp"
                                android:inputType="number"
                                android:maxLength="1"
                                android:gravity="center"
                                android:layout_marginStart="20dp"
                                android:textSize="20sp"/>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/email_tl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp">

                        <EditText
                            android:id="@+id/email_ed"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textEmailAddress"
                            android:background="@color/white"
                            android:hint="Email"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/address_home_tl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp">

                        <EditText
                            android:id="@+id/address_home_ed"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textEmailAddress"
                            android:background="@color/white"
                            android:hint="Address Home"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/address_clinic_tl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp">

                        <EditText
                            android:id="@+id/address_clinic_ed"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textEmailAddress"
                            android:background="@color/white"
                            android:hint="Address Clinic"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="State"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="20dp">
                    </TextView>

                    <Spinner
                        android:id="@+id/state_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:entries="@array/states"
                        android:onItemSelected="@{viewModel::onSelectItem}"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="District"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="20dp">
                    </TextView>

                    <Spinner
                        android:id="@+id/district_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:entries="@array/district"
                        android:onItemSelected="@{viewModel::onSelectItem}"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Chapter"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="20dp">
                    </TextView>

                    <Spinner
                        android:id="@+id/chapter_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:entries="@array/chapter"
                        android:onItemSelected="@{viewModel::onSelectItem}"/>



                    <TextView
                        android:id="@+id/submit_id"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:padding="3dp"
                        android:text="Submit"
                        android:background="@drawable/payment_button_bg"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="30dp"
                        android:textAllCaps="false" />


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Create"
                        android:textSize="25dp"
                        android:layout_marginLeft="30dp"
                        android:textColor="@color/white"
                        android:layout_marginTop="30dp">

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your Account"
                        android:textSize="25dp"
                        android:layout_marginLeft="30dp"
                        android:textColor="@color/white"
                        android:layout_marginTop="60dp">

                    </TextView>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_image"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/camera"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="250dp">

                    </de.hdodenhof.circleimageview.CircleImageView>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_marginTop="130dp"
                        android:gravity="center"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/doctor_id"
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:text="Doctor"
                            android:textSize="20dp"
                            android:padding="5dp"
                            android:textStyle="bold"
                            android:elevation="3dp"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:background="@drawable/red_leftrounded_bg">

                        </TextView>
                        <TextView
                            android:id="@+id/student_id"
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:text="Student"
                            android:padding="5dp"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:textSize="20dp"
                            android:elevation="3dp"
                            android:textColor="@color/colorAccent"
                            android:background="@drawable/white_rightrounded_bg">

                        </TextView>

                    </LinearLayout>

                </RelativeLayout>

            </FrameLayout>

        </LinearLayout>
    </ScrollView>


</layout>