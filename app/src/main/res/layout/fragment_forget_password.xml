<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewModel"
            type="com.deltasoft.ihma.viewmodel.ForgotPasswordViewModel" />
        <variable
            name="fragment"
            type="com.deltasoft.ihma.view.login.ForgetPasswordFragment" />
        <variable
            name="errors"
            type="com.deltasoft.ihma.model.SignInErrors" />
    </data>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorPrimary">

        <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/changepwd_id"
                android:layout_gravity="center"
                android:layout_marginTop="100dp"
                android:src="@drawable/ic_baseline_lock_open_24" />

        <TextView
            android:layout_width="match_parent"
            android:text="NEW"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="25dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:text="CREDENTIALS"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:text="Your identity has been verified!"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="15dp"
            android:fontFamily="@font/dmsans_bold"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:text="Set your new password"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="15dp"
            android:fontFamily="@font/dmsans_bold"
            android:layout_height="wrap_content"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout_newpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorTextColor="@color/white"
            app:errorIconTint="@color/white"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:hintTextColor="@color/white"
            app:hintAnimationEnabled="true"
            app:boxStrokeColor="@color/white"
            android:textColorHint="@color/white"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/white"
            android:hint="New Password">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/username_et"
                style="@style/editText"
                android:layout_width="match_parent"
                android:inputType="text"
                android:background="@color/colorPrimary"
                android:layout_height="wrap_content"
                android:text="@={viewModel.newpassword}" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorIconTint="@color/white"
            app:errorTextColor="@color/white"
            android:hint="Confirm Password"
            app:hintAnimationEnabled="true"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/white"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:boxStrokeColor="@color/white"
            app:hintTextColor="@color/white"
            android:textColorHint="@color/white">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password_et"
                style="@style/editText"
                android:inputType="textPassword"
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:text="@={viewModel.confirmpassword}"
                />
        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:theme="@style/AccentButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="40dp"
            android:alpha="@{errors.uiUpdate ? 0.3f : 1.0f}"
            android:padding="10dp"
            android:text="UPDATE"
            android:textAllCaps="true"
            android:onClick="@{(v)->fragment.onLoginClicked(v)}"
            app:layout_constraintEnd_toEndOf="parent" />



    </LinearLayout>


</layout>
