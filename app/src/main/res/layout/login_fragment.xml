<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewModel"
            type="com.ilaftalkful.ihma.view.LoginViewModel" />
        <variable
            name="fragment"
            type="com.ilaftalkful.ihma.view.login.LoginFragment" />
        <variable
            name="errors"
            type="com.ilaftalkful.ihma.model.SignInErrors" />
    </data>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/margin_main"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginRight="@dimen/margin_main"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="120dp"
            android:src="@drawable/logo"
            android:layout_height="120dp"/>
        <TextView
            android:layout_width="match_parent"
            android:text="IHMA"
            android:textColor="@color/white"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="25dp"
            android:fontFamily="@font/dmsans_bold"
            android:layout_height="wrap_content"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorText="@{errors.userNameError}"
            android:textColorHint="@color/white">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/username_et"
                style="@style/editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:hint="@string/username"
                android:text="@={viewModel.username}"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/white"
            app:errorText="@{errors.userPasswordError}">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password_et"
                style="@style/editText"
                android:layout_width="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:text="@={viewModel.password}"
                android:hint="@string/password" />
        </com.google.android.material.textfield.TextInputLayout>

        <ProgressBar
            android:id="@+id/progress_bar"
            android:visibility="invisible"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </ProgressBar>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="55dp"

            android:gravity="center"
            android:orientation="horizontal"

            android:layout_height="wrap_content">

            <TextView
                android:theme="@style/AccentButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:alpha="@{errors.uiUpdate ? 0.3f : 1.0f}"
                android:enabled="@{viewModel.isValid}"
                android:onClick="@{(v)->fragment.onLoginClicked(v,errors)}"
                android:padding="15dp"
                android:text="@string/login"
                android:textAllCaps="true"
                app:layout_constraintEnd_toEndOf="parent"
                />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/forget_password"
            android:textColor="@color/white"
            android:fontFamily="@font/dmsans_reguler"
            app:layout_constraintBottom_toTopOf="@+id/textView12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />



    </LinearLayout>

</LinearLayout>
</layout>
