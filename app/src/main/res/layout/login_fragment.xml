<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.deltasoft.ihma.view.LoginViewModel" />
        <variable
            name="fragment"
            type="com.deltasoft.ihma.view.login.LoginFragment" />
        <variable
            name="errors"
            type="com.deltasoft.ihma.model.SignInErrors" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">

       <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/margin_main"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginRight="@dimen/margin_main"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="120dp"
            android:src="@drawable/logo_new"
            android:layout_margin="10dp"
            android:layout_height="120dp"/>
        <TextView
            android:layout_width="match_parent"
            android:text="IHMA"
            android:textColor="@color/white"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="30dp"
            android:fontFamily="@font/dmsans_bold"
            android:layout_height="wrap_content"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorTextColor="@color/white"
            app:errorIconTint="@color/white"
            android:layout_margin="10dp"
            app:hintTextColor="@color/white"
            app:hintAnimationEnabled="true"
            app:boxStrokeColor="@color/white"
            android:textColorHint="@color/white"
            app:errorEnabled="true"
            app:errorText="@{errors.userNameError}"
            android:hint="@string/username">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/username_et"
                style="@style/editText"
                android:layout_width="match_parent"
                android:inputType="text"
                android:background="@color/colorPrimary"
                android:layout_height="wrap_content"
                android:text="@={viewModel.username}" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorIconTint="@color/white"
            app:errorEnabled="true"
            app:errorText="@{errors.userPasswordError}"
            app:errorTextColor="@color/white"
            android:hint="@string/password"
            app:hintAnimationEnabled="true"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/white"
            android:layout_margin="10dp"
            app:boxStrokeColor="@color/white"
            app:hintTextColor="@color/white"
            android:textColorHint="@color/white">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password_et"
                style="@style/editText"
                android:inputType="textPassword"
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:text="@={viewModel.password}"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/rememberpwd_checkbox"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:buttonTint="@color/white"
                android:checked="@={viewModel.contactCheckbox}"
                android:layout_height="wrap_content">
            </CheckBox>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remember Password"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white">

            </TextView>

        </LinearLayout>


            <TextView
                android:theme="@style/AccentButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="30dp"
                android:enabled="@{viewModel.isValid}"
                android:alpha="@{errors.uiUpdate ? 0.3f : 1.0f}"
                android:onClick="@{(v)->fragment.onLoginClicked(v,errors)}"
                android:padding="10dp"
                android:text="@string/login"
                android:textStyle="bold"
                android:textAllCaps="true"
                app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Don't have an account?"
                android:textColor="@color/white"
                android:fontFamily="@font/dmsans_reguler" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Sign Up Now"
                android:onClick="@{(v)->fragment.onRegisterClicked(v)}"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:fontFamily="@font/dmsans_reguler" />

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="FORGOT PASSWORD"
            android:layout_marginTop="30dp"
            android:onClick="@{(v)->fragment.onForgotPassword(v)}"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:fontFamily="@font/dmsans_reguler" />


    </LinearLayout>


</LinearLayout>
    </ScrollView>
</layout>
