<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Theme.Ileaf" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
            <!-- Customize your theme here. -->
            <item name="colorPrimary">@color/colorPrimary</item>
            <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
            <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryVariant">@color/text_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
      <!--  <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>-->
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorPrimary</item>
        <!-- Customize your theme here. -->
</style>

    <style name="headerTextStyle" >
        <!-- Customize your theme here. -->
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="tittileText" >
        <!-- Customize your theme here. -->
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="tittileTextPrimary" >
        <!-- Customize your theme here. -->
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <style name="slimText" >
        <!-- Customize your theme here. -->
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="WhiteRectButton" >
        <!-- Customize your theme here. -->
        <item name="android:padding">15dp</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_margin_white_bg</item>
    </style>

    <style name="AccentButton" >
        <!-- Customize your theme here. -->
        <item name="android:textSize">25dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/accent_button_bg</item>
    </style>

    <style name="editText" >
        <!-- Customize your theme here. -->
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:layout_marginTop">@dimen/margin_item</item>
        <item name="android:fontFamily">@font/dmsans_medium</item>
        <item name="android:gravity">bottom</item>
        <item name="android:colorControlActivated">@color/white</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/text_color</item>
    </style>
    <style name="editText_no_margin" >
    <!-- Customize your theme here. -->
    <item name="android:textSize">15dp</item>
    <item name="android:textColor">@color/text_color</item>
        <item name="android:background">@color/colorPrimary</item>  <item name="android:fontFamily">@font/dmsans_medium</item>
    <item name="android:drawablePadding">10dp</item>
    <item name="android:textColorHint">@color/text_color</item>
</style>
    <style name="Theme.Ileaf.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Ileaf.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Ileaf.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="ShapeAppearance.Button.CutCorners" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">15dp</item>
    </style>
</resources>